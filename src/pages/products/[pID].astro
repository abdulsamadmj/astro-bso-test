---
import Layout from "../../layouts/Layout.astro";
import { placeholders, strapi } from "../../utils/constants";

const { pID } = Astro.params;
let product: {
  pID: string;
  title: string;
  price: number;
  image: string;
} | null = null;
let error: string | null = null;

try {
  // Fetch product details from your API
  const response = await fetch(
    strapi.BASE_URL + "/api/products/?filters[pID][$eq]=" + pID + "&populate=*",
    {
      method: "get",
    }
  );
  if (response.ok) {
    const res = await response.json();
    const data = res.data[0].attributes;
    const image = data.image?.data?.[0].attributes?.url;
    product = {
      pID: data.pID,
      title: data.title,
      price: data.price,
      image: image ? strapi.BASE_URL + image : placeholders.PRODUCT_IMAGE,
    };
  } else {
    error = "Product doesn't exist";
  }
} catch (err) {
  error = "Failed to fetch product data " + err;
}
---

<Layout title={product?.title ?? "Product Page"} navbar>
  <div class="max-w-screen-xl px-4 py-10 mx-auto 2xl:px-0">
    {
      error ? (
        <div class="text-center text-red-500">
          <p>{error}</p>
        </div>
      ) : (
        <div class="lg:grid lg:grid-cols-2 lg:gap-8 xl:gap-16">
          <div class="shrink-0 max-w-md lg:max-w-lg mx-auto">
            <img
              class="w-full max-h-72 dark:hidden object-contain"
              src={product?.image || "fallback-image.jpg"}
              alt={product?.title || "Product image"}
            />
          </div>

          <div class="mt-6 sm:mt-8 lg:mt-0">
            <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">
              {product?.title || "Product Title"}
            </h1>
            <div class="mt-4 sm:items-center sm:gap-4 sm:flex">
              <p class="text-2xl font-extrabold text-gray-900 sm:text-3xl dark:text-white">
                ${product?.price || "N/A"}
              </p>
            </div>

            <div class="mt-6 sm:gap-4 sm:items-center sm:flex sm:mt-8">
              <a
                href="#"
                title=""
                class="text-white mt-4 sm:mt-0 bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800 flex items-center justify-center"
                role="button"
              >
                <svg
                  class="w-5 h-5 -ms-2 me-2"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 4h1.5L8 16m0 0h8m-8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm.75-3H7.5M11 7H6.312M17 4v6m-3-3h6"
                  />
                </svg>
                Add to cart
              </a>
            </div>

            <hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />
            <ul class="mt-2 flex items-center gap-4">
              <li class="flex items-center gap-2">
                <svg
                  class="h-4 w-4 text-gray-500 dark:text-gray-400"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 7h6l2 4m-8-4v8m0-8V6a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v9h2m8 0H9m4 0h2m4 0h2v-4m0 0h-5m3.5 5.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0Zm-10 0a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0Z"
                  />
                </svg>
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">
                  Fast Delivery
                </p>
              </li>

              <li class="flex items-center gap-2">
                <svg
                  class="h-4 w-4 text-gray-500 dark:text-gray-400"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-width="2"
                    d="M8 7V6c0-.6.4-1 1-1h11c.6 0 1 .4 1 1v7c0 .6-.4 1-1 1h-1M3 18v-7c0-.6.4-1 1-1h11c.6 0 1 .4 1 1v7c0 .6-.4 1-1 1H4a1 1 0 0 1-1-1Zm8-3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"
                  />
                </svg>
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">
                  Best Price
                </p>
              </li>
            </ul>
          </div>
        </div>
      )
    }
  </div>
</Layout>
